@model WebApp.ViewModels.ExampleEntity.ExampleEntityGridViewModel

<h2>Example data from Application.</h2>

<div class="row">
    <div class="col-md-12">
        <a asp-area="" asp-controller="ExampleEntity" asp-action="Save">Add ExampleEntity</a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <th scope="row"></th>
                        <td>@item.Name</td>
                        <td>@Html.ActionLink("Delete", "ExampleEntity")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>